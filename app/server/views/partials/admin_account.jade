// preset form values if we receive a userdata object //
- adminuser = typeof(audata) != 'undefined' ? audata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= adminuser._id)#adminuserId

#account-form-container.container-fluid.login-register
	div.heading
		h1 Admin Signup
	form( method="post")#admin-account-form.form-horizontal
		fieldset
			#adminname-cg.form-group
				input#name-tf.input-xlarge(type='text', placeholder="Full name", name='adminname', value= adminuser.adminname).required.form-controls
			#adminemail-cg.form-group
				input#email-tf.input-xlarge(type='text', placeholder="Email address", name='adminemail', value= adminuser.adminemail).required.form-controls
			hr
			#adminuser-cg.form-group
				input#user-tf.input-xlarge.disabled(type='text', placeholder="Username", name='adminuser', value= adminuser.adminuser).required.form-controls
			#adminpass-cg.form-group
				input#pass-tf.input-xlarge(type='password', placeholder="Password", name='adminpass', value='').required.form-controls
			.form-group
				button(type='button')#admin-account-form-btn1.btn Cancel
				button(type="submit")#btn-login.btn.btn-primary Create Admin Account

// display form errors in a custom modal window //

include ../modals/form-errors
